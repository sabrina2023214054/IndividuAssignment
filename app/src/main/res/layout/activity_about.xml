<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_pink">

    <!-- FULL-WIDTH Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maroon"
        android:title="About"
        android:titleTextColor="@color/white"
        android:elevation="6dp" />




    <!-- Content area -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@drawable/calculator_img"
            android:scaleType="centerCrop" />
        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:text="Dividend Calculator App"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Author Info -->
        <TextView
            android:id="@+id/txtAuthor"
            android:text="Author : NUR SABRINA BINTI MAMAT"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtMatric"
            android:text="Matric No : 2023214054"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCourse"
            android:text="Course : CS240"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- GitHub Link -->
        <TextView
            android:id="@+id/txtGithub"
            android:text="Open GitHub Repository"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCopyright"
            android:text="Â© 2025 Dividend Calculator App. All Rights Reserved."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

