<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_pink">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Dividend Calculator App"
            android:textColor="@color/black_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtInvested"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:hint="Invested Amount (RM)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtRate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Annual Dividend Rate (%)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/edtMonths"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Months Invested (1â€“12)"
            android:inputType="number"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Calculate"
            android:textSize="18sp"
            android:gravity="center"
            android:backgroundTint="@color/maroon"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/maroon"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
